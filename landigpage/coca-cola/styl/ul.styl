  .sci
    position absolute
    bottom 40px
    left 100px
    display flex
    justify-content center
    align-items center

    li
      list-style none

      a
        display inline-block
        margin-left 15px
        background #222
        width 50px
        height 50px
        display flex
        justify-content center
        align-items center
        border-radius 50%
        transition 0.2s ease-in-out

      a:hover
        background #351e2a
        transform translateY(-10px)

        img
          filter invert(1)
          transform scale(0.5)

